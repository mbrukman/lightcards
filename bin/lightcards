#!/usr/bin/env node
// vi: ft=javascript

require('colors');

var fs = require('fs'),
    path = require('path'),
    program = require('commander');

var pkg = require('../package.json');

program
  .version(pkg.version)

  .option('-p, --port <port>',
          'specify the server port [3000]', parseInt, 3000)

  .option('-v, --vocabulary-file <file>',
          'specify a vocabulary file [lightcards-vocabulary.txt]', 'vocabulary.txt')

  .option('-c, --config-file <file>',
          'specify a configuration file [lightcards-config.json]', 'config.json')

  .option('-s, --state-file <file>',
          'specify a saved state file [lightcards-state.json]', 'state.json');

program
  .command('init')
  .description('initialize a lightcards setup in the current directory')
  .action(require('./init.js'));

program.parse(process.argv);

process.stdout.write('Starting local web server...');

require('../lib/server').listen({
  port: program.port,
  stateFile: program.state || 'state.json',
  configFile: program.config || 'lightcards.json'
}, function(err) {
  process.stdout.write(' OK!\n'.green);
  process.stdout.write('Start learning on ' + ('http://localhost:' + program.port).cyan);
});
